<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ayst.stresstest.test.BluetoothTestFragment">

    <LinearLayout
        android:id="@+id/container_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_test_intro"
            android:textColor="@color/black_70" />

        <CheckBox
            android:id="@+id/chbox_check_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bt_test_retry" />

        <CheckBox
            android:id="@+id/chbox_ble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bt_test_ble" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container_running"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <com.kongqw.radarscanviewlibrary.RadarScanView
            android:id="@+id/radarScanView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:radarBackgroundColor="@color/transparent"
            app:radarBackgroundLinesColor="@color/colorAccent"
            app:radarBackgroundLinesNumber="5"
            app:radarBackgroundLinesWidth="1"
            app:radarScanAlpha="0x33"
            app:radarScanColor="@color/colorAccent"
            app:radarScanTime="2000" />

        <ListView
            android:id="@+id/lv_device"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:dividerHeight="1px" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_30"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </FrameLayout>

</FrameLayout>
